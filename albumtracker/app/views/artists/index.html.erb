<%= render 'nav' %>
<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Artists</h1>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @artists.each do |artist| %>
        <tr>
          <td><%= artist.name %></td>
          <td><%= link_to 'Show', artist, :class => "btn btn-sm btn-warning" %></td>
          <td><%= link_to 'Edit', edit_artist_path(artist), :class => "btn btn-sm btn-info"  %></td>
          <td><%= link_to 'Destroy', artist, :class => "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <p><%= link_to 'New Artist', new_artist_path %></p>
</div><!-- container -->
