<p id="notice"><%= notice %></p>

<h1>Listing Labels</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td><%= label.name %></td>
        <td><%= link_to 'Show', label, :class => "btn btn-sm btn-warning" %></td>
        <td><%= link_to 'Edit', edit_label_path(label), :class => "btn btn-sm btn-info" %></td>
        <td><%= link_to 'Destroy', label, :class => "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Label', new_label_path, :class => "btn btn-warning" %>
